<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="?attr/colorSurface"
    android:elevation="1dp">

    <!-- Result Count -->
    <TextView
        android:id="@+id/tv_result_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0 transactions"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface" />

    <!-- Date Filter Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_date_filter"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:text="All Time"
        android:textSize="12sp"
        android:minWidth="80dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:contentDescription="Filter by date"
        app:icon="@drawable/ic_calendar"
        app:iconSize="16dp"
        app:iconGravity="start" />

    <!-- Sort Option Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sort_option"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Latest First"
        android:textSize="12sp"
        android:minWidth="100dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:contentDescription="Sort options"
        app:icon="@drawable/ic_sort"
        app:iconSize="16dp"
        app:iconGravity="start" />

</LinearLayout>
